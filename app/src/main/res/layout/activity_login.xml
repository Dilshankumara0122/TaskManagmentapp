<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Sing Up"
            android:textColor="#538CB8"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/log"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="25dp"
            android:gravity="start"
            android:text="User Name"
            android:textColor="#538CB8"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/username_singup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="5dp"
            android:textColorHighlight="#3F51B5"
            android:textColorLink="#C1B5B5"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="25dp"
            android:gravity="start"
            android:text="Password"
            android:textColor="#538CB8"
            android:textSize="22dp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pass_singup"
            android:orientation="vertical"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border"/>

        <Button
            android:id="@+id/login"

            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="#538CB8"
            android:text="Sing Up"
            android:textSize="25dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:text="If Your Donâ€™t Have Account "
                android:textColor="#538CB8"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/no_sing_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="25dp"
                android:gravity="start"
                android:shadowColor="#3DB7E3"
                android:text="Sign In Now"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>